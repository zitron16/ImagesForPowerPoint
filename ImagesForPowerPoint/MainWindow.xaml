<Window x:Class="ImagesForPowerPoint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImagesForPowerPoint"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Title" Margin="5" />
        <TextBox x:Name="titleWord" Grid.Column="2" Grid.Row="1" Width="200" 
                 Margin="5" />
        <TextBlock Grid.Row="2" Text="Bold Words" Margin="10,5,30,146" Grid.ColumnSpan="2"  />
        <TextBox x:Name="boldWord" Grid.Column="1" Grid.Row="2" 
                 Height="150" Margin="10,4,21,13" TextWrapping="Wrap" Grid.ColumnSpan="2"  />



        <Button x:Name="submitButton" Content="Search Google Images" Grid.Column="1" Grid.ColumnSpan="2"
                Grid.Row="5" Margin="10" Click="SubmitButton_Click" />

        <WebBrowser Name="myweb" Grid.Row="1" Grid.Column="2" Grid.RowSpan="6" Source="https://www.google.com/imghp?hl=" Grid.ColumnSpan="3" Margin="205,18,5,25" />
        <TextBlock Grid.Column="4" HorizontalAlignment="Left" Margin="10,2,0,0" TextWrapping="Wrap" Text="Right click desired image, save as download.png in Downloads" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,4,0,0" TextWrapping="Wrap" Text="Enter Title and Bold Words of Body of PPT slide" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="8,10,0,0" Grid.Row="6" TextWrapping="Wrap" Text="This button takes the title and the bold" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,37,0,0" Grid.Row="6" TextWrapping="Wrap" Text="words in the body to be searched when " VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,58,0,0" Grid.Row="6" TextWrapping="Wrap" Text="button is clicked." VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBlock Grid.Column="4" HorizontalAlignment="Left" Margin="10,4,0,0" TextWrapping="Wrap" Text="Once Search Google Images button is clicked (or feel free to search Google directly)" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="12,21,0,0" Grid.Row="2" TextWrapping="Wrap" Text="of Body" VerticalAlignment="Top" Width="57"/>
        <Button Content="Generate Powerpoint Slide" Grid.Column="4" HorizontalAlignment="Left" Margin="110,129,0,0" Grid.Row="6" VerticalAlignment="Top" Width="221" Grid.RowSpan="2" Click="Button_Click"/>

    </Grid>
</Window>
